pico-8 cartridge // http://www.pico-8.com
version 18
__lua__
gunner_sprite=1
gunner_x=-8
gunner_y=59
gunner_anim_time=0
gunner_anim_wait =0.1

function _update()
	gunner_x+=1
	if gunner_x> 127 then
		gunner_x=-8
	end
	if time() - gunner_anim_time > gunner_anim_wait then
		gunner_sprite+=1
		gunner_anim_time=time()
		
		if gunner_sprite > 4 then
			gunner_sprite=1
		end
	end
end

function _draw()
	cls()
	spr( gunner_sprite, gunner_x, gunner_y)
	print( time() )
end
